<!-- layout.njk with syntax highlighting -->
<!DOCTYPE html>
<html lang="en" data-theme="matrix">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} - hackwith.me</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" type="image/png" href="/favicon.png">
  <meta name="description" content="A hacker's blog about security, programming, and technology">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/styles/base16/hacker.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
  <script>hljs.highlightAll();</script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.0.0/css/all.min.css">
  <style>
    /* Theme variables */
    html[data-theme="matrix"] {
      --text-color: #00ff33;
      --link-color: #00ff33;
      --bg-color: #000000;
      --header-bg: rgba(0, 255, 51, 0.05);
      --hover-color: #fff;
    }

    html[data-theme="cyber"] {
      --text-color: #0ff;
      --link-color: #0ff;
      --bg-color: #000000;
      --header-bg: rgba(0, 255, 255, 0.05);
      --hover-color: #fff;
    }

    html[data-theme="amber"] {
      --text-color: #ffb000;
      --link-color: #ffb000;
      --bg-color: #000000;
      --header-bg: rgba(255, 176, 0, 0.05);
      --hover-color: #fff;
    }

    html[data-theme="neon"] {
      --text-color: #ff00ff;
      --link-color: #ff00ff;
      --bg-color: #000000;
      --header-bg: rgba(255, 0, 255, 0.05);
      --hover-color: #fff;
    }

    /* Theme switcher styles */
    .theme-switcher {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background: var(--header-bg);
      padding: 10px;
      border-radius: 5px;
      border: 1px solid var(--text-color);
      z-index: 1000;
      font-family: 'Fira Code', monospace;
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .theme-switcher p {
      margin: 0 0 5px 0;
      color: var(--text-color);
    }

    .theme-option {
      cursor: pointer;
      padding: 5px 10px;
      border-radius: 3px;
      transition: background-color 0.2s ease;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .theme-option:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    .theme-option.active {
      background: var(--text-color);
      color: var(--bg-color);
    }

    .color-preview {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      display: inline-block;
    }

    .color-preview.matrix { background: #00ff33; }
    .color-preview.cyber { background: #0ff; }
    .color-preview.amber { background: #ffb000; }
    .color-preview.neon { background: #ff00ff; }

    /* Base styles */
    html, body {
      min-height: 100%;
      margin: 0;
      padding: 0;
      background-color: var(--bg-color);
      color: var(--text-color);
      font-family: 'Fira Code', monospace;
      line-height: 1.6;
      display: flex;
      flex-direction: column;
    }

    .container {
      flex: 1;
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
    }

    main {
      flex: 1;
      width: 100%;
    }

    /* Header styles */
    header {
      background: var(--header-bg);
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 30px;
    }

    header h1 {
      margin: 0;
      font-size: 1.5em;
    }

    nav {
      margin-top: 15px;
      display: flex;
      align-items: center;
      flex-wrap: nowrap;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    nav::-webkit-scrollbar {
      display: none;
    }

    nav .prompt {
      white-space: nowrap;
      margin-right: 10px;
    }

    nav a {
      color: var(--link-color);
      text-decoration: none;
      margin-right: 15px;
      white-space: nowrap;
      transition: color 0.2s ease;
    }

    nav a:hover {
      color: var(--hover-color);
      text-decoration: underline;
    }

    /* Footer styles */
    footer {
      margin-top: 50px;
      padding-top: 30px;
      border-top: 1px solid var(--header-bg);
    }

    .social-links {
      margin-bottom: 30px;
    }

    .social-output {
      margin-left: 20px;
    }

    .social-output a {
      color: var(--link-color);
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .social-output a:hover {
      color: var(--hover-color);
      text-decoration: underline;
    }

    .cursor {
      animation: blink 1s step-end infinite;
    }

    @keyframes blink {
      50% { opacity: 0; }
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .container {
        padding: 10px;
      }

      header {
        padding: 15px;
      }

      header h1 {
        font-size: 1.2em;
      }

      nav {
        margin-top: 10px;
        font-size: 0.9em;
      }

      nav a {
        margin-right: 12px;
      }

      .theme-switcher {
        bottom: 10px;
        right: 10px;
        font-size: 0.9em;
      }
    }

    @media (max-width: 480px) {
      header h1 {
        font-size: 1em;
      }

      nav {
        font-size: 0.85em;
      }

      nav a {
        margin-right: 10px;
      }
    }
  </style>
</head>
<body class="terminal-effect">
  <div class="container">
    <header>
      <h1><span class="prompt">root@hackwith.me:~$</span> cd /home/blog</h1>
      <nav>
        <span class="prompt">blog$</span>
        <a href="/">home</a>
        <a href="/blog">posts</a>
        <a href="/search">search</a>
        <a href="/about">about</a>
        <a href="/contact">contact</a>
      </nav>
    </header>

    <main>
      {{ content | safe }}
    </main>

    <footer>
      <div class="social-links">
        <p>
          <span class="prompt">blog$</span> cat /etc/social/*
        </p>
        <div class="social-output">
          <p>
            <span class="file-info">-rw-r--r-- root root 19 Mar 15 00:00</span>
            <a href="https://linkedin.com/in/adilburaksen" target="_blank" rel="noopener">
              <i class="fab fa-linkedin"></i> ~/linkedin/adilburaksen
            </a>
          </p>
          <p>
            <span class="file-info">-rw-r--r-- root root 16 Mar 15 00:00</span>
            <a href="https://github.com/adilburaksen" target="_blank" rel="noopener">
              <i class="fab fa-github"></i> ~/github/adilburaksen
            </a>
          </p>
          <p>
            <span class="file-info">-rw-r--r-- root root 14 Mar 15 00:00</span>
            <a href="https://x.com/adilburaksen" target="_blank" rel="noopener">
              <i class="fab fa-x-twitter"></i> ~/x/adilburaksen
            </a>
          </p>
        </div>
      </div>
      <p>
        <span class="prompt">blog$</span> echo "© {% year %} hackwith.me | Built with 11ty and ❤️"
      </p>
      <p class="cursor">
        <span class="prompt">blog$</span> _
      </p>
    </footer>

    <div class="theme-switcher">
      <p><span class="prompt">$</span> select-theme</p>
      <div class="theme-option active" data-theme="matrix">
        <span class="color-preview matrix"></span>
        Matrix
      </div>
      <div class="theme-option" data-theme="cyber">
        <span class="color-preview cyber"></span>
        Cyber
      </div>
      <div class="theme-option" data-theme="amber">
        <span class="color-preview amber"></span>
        Amber
      </div>
      <div class="theme-option" data-theme="neon">
        <span class="color-preview neon"></span>
        Neon
      </div>
    </div>
  </div>

  <script>
    // Add terminal typing effect to headers
    document.querySelectorAll('h1, h2, h3').forEach(header => {
      if (!header.querySelector('.prompt')) {
        const text = header.textContent;
        header.innerHTML = `<span class="prompt">$</span> ${text}`;
      }
    });

    // Theme switcher functionality
    document.addEventListener('DOMContentLoaded', () => {
      const themeOptions = document.querySelectorAll('.theme-option');
      const savedTheme = localStorage.getItem('theme') || 'matrix';
      
      // Set initial theme
      document.documentElement.setAttribute('data-theme', savedTheme);
      themeOptions.forEach(option => {
        if (option.dataset.theme === savedTheme) {
          option.classList.add('active');
        } else {
          option.classList.remove('active');
        }
      });

      // Theme switching
      themeOptions.forEach(option => {
        option.addEventListener('click', () => {
          const theme = option.dataset.theme;
          document.documentElement.setAttribute('data-theme', theme);
          localStorage.setItem('theme', theme);
          
          themeOptions.forEach(opt => {
            opt.classList.remove('active');
          });
          option.classList.add('active');
        });
      });
    });
  </script>
</body>
</html>