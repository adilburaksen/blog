<!-- layout.njk with syntax highlighting -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} - hackwith.me</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" type="image/png" href="/favicon.png">
  <meta name="description" content="A hacker's blog about security, programming, and technology">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/styles/base16/hacker.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
  <script>hljs.highlightAll();</script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.0.0/css/all.min.css">
  <style>
    /* Base styles */
    :root {
      --text-color: #00ff33;
      --link-color: #00ff33;
      --bg-color: #000000;
      --header-bg: rgba(0, 255, 0, 0.05);
    }

    body {
      background-color: var(--bg-color);
      color: var(--text-color);
      font-family: 'Fira Code', monospace;
      line-height: 1.6;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    /* Header styles */
    header {
      background: var(--header-bg);
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 30px;
    }

    header h1 {
      margin: 0;
      font-size: 1.5em;
    }

    nav {
      margin-top: 15px;
      display: flex;
      align-items: center;
      flex-wrap: nowrap;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* IE and Edge */
    }

    nav::-webkit-scrollbar {
      display: none; /* Chrome, Safari, Opera */
    }

    nav .prompt {
      white-space: nowrap;
      margin-right: 10px;
    }

    nav a {
      color: var(--link-color);
      text-decoration: none;
      margin-right: 15px;
      white-space: nowrap;
      transition: color 0.2s ease;
    }

    nav a:hover {
      color: #fff;
      text-decoration: underline;
    }

    /* Footer styles */
    footer {
      margin-top: 50px;
      padding-top: 30px;
      border-top: 1px solid rgba(0, 255, 0, 0.1);
    }

    .social-links {
      margin-bottom: 30px;
    }

    .social-output {
      margin-left: 20px;
    }

    .social-output a {
      color: var(--link-color);
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .social-output a:hover {
      color: #fff;
      text-decoration: underline;
    }

    .cursor {
      animation: blink 1s step-end infinite;
    }

    @keyframes blink {
      50% { opacity: 0; }
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .container {
        padding: 10px;
      }

      header {
        padding: 15px;
      }

      header h1 {
        font-size: 1.2em;
      }

      nav {
        margin-top: 10px;
        font-size: 0.9em;
      }

      nav a {
        margin-right: 12px;
      }
    }

    @media (max-width: 480px) {
      header h1 {
        font-size: 1em;
      }

      nav {
        font-size: 0.85em;
      }

      nav a {
        margin-right: 10px;
      }
    }
  </style>
</head>
<body class="terminal-effect">
  <div class="container">
    <header>
      <h1><span class="prompt">root@hackwith.me:~$</span> cd /home/blog</h1>
      <nav>
        <span class="prompt">blog$</span>
        <a href="/">home</a>
        <a href="/blog">posts</a>
        <a href="/search">search</a>
        <a href="/about">about</a>
        <a href="/contact">contact</a>
      </nav>
    </header>

    <main>
      {{ content | safe }}
    </main>

    <footer>
      <div class="social-links">
        <p>
          <span class="prompt">blog$</span> cat /etc/social/*
        </p>
        <div class="social-output">
          <p>
            <span class="file-info">-rw-r--r-- root root 19 Mar 15 00:00</span>
            <a href="https://linkedin.com/in/adilburaksen" target="_blank" rel="noopener">
              <i class="fab fa-linkedin"></i> ~/linkedin/adilburaksen
            </a>
          </p>
          <p>
            <span class="file-info">-rw-r--r-- root root 16 Mar 15 00:00</span>
            <a href="https://github.com/adilburaksen" target="_blank" rel="noopener">
              <i class="fab fa-github"></i> ~/github/adilburaksen
            </a>
          </p>
          <p>
            <span class="file-info">-rw-r--r-- root root 14 Mar 15 00:00</span>
            <a href="https://x.com/adilburaksen" target="_blank" rel="noopener">
              <i class="fab fa-x-twitter"></i> ~/x/adilburaksen
            </a>
          </p>
        </div>
      </div>
      <p>
        <span class="prompt">blog$</span> echo "© {% year %} hackwith.me | Built with 11ty and ❤️"
      </p>
      <p class="cursor">
        <span class="prompt">blog$</span> _
      </p>
    </footer>
  </div>

  <script>
    // Add terminal typing effect to headers
    document.querySelectorAll('h1, h2, h3').forEach(header => {
      if (!header.querySelector('.prompt')) {
        const text = header.textContent;
        header.innerHTML = `<span class="prompt">$</span> ${text}`;
      }
    });
  </script>
</body>
</html>