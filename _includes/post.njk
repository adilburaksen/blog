{% extends "layout.njk" %}

{% block content %}
<div class="post">
  <div class="post-header">
    <p class="command">
      <span class="prompt">blog$</span> cat {{ page.fileSlug }}.md
    </p>
    <h1>
      <span class="prompt">$</span> {{ title }}
    </h1>
    <p class="file-info">
      <span class="prompt">$</span> date {{ page.date | dateDisplay }}
    </p>
    {% if tags %}
      <p class="tags">
        <span class="prompt">$</span> grep -l "tags:"
        {% for tag in tags %}
          <a href="/tags/{{ tag | slug }}/">#{{ tag }}</a>
        {% endfor %}
      </p>
    {% endif %}
  </div>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <div class="post-footer">
    <p class="share">
      <span class="prompt">$</span> share {{ page.fileSlug }}
      <a href="https://twitter.com/intent/tweet?text={{ title | urlencode }}&url={{ page.url | urlencode }}" target="_blank">Twitter</a>
      <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ page.url | urlencode }}&title={{ title | urlencode }}" target="_blank">LinkedIn</a>
    </p>
    <p class="navigation">
      <span class="prompt">$</span> cd ../blog
    </p>
  </div>
</div>

<style>
.post {
  background: rgba(0, 255, 0, 0.05);
  padding: 20px;
  border-radius: 5px;
  margin: 20px 0;
  font-family: 'Courier New', monospace;
  line-height: 1.6;
}

.post-header {
  margin-bottom: 30px;
}

.command {
  font-family: monospace;
  color: rgba(0, 255, 0, 0.7);
  margin-bottom: 10px;
}

.file-info {
  font-family: monospace;
  color: rgba(0, 255, 0, 0.7);
  font-size: 0.9em;
  margin: 10px 0;
}

.tags {
  font-family: monospace;
  font-size: 0.9em;
  margin: 10px 0;
}

.tags a {
  color: var(--link-color);
  text-decoration: none;
  margin-right: 10px;
  transition: color 0.2s ease;
}

.tags a:hover {
  color: #00ff33;
  text-decoration: underline;
}

.post-content {
  margin: 20px 0;
  line-height: 1.6;
  color: var(--text-color);
}

.post-content img {
  max-width: 100%;
  height: auto;
  margin: 20px 0;
  border-radius: 5px;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.post-content pre {
  background: rgba(0, 0, 0, 0.3);
  padding: 15px;
  border-radius: 5px;
  overflow-x: auto;
}

.post-content code {
  font-family: monospace;
}

.post-content blockquote {
  border-left: 3px solid rgba(0, 255, 0, 0.3);
  margin: 20px 0;
  padding-left: 20px;
  color: rgba(0, 255, 0, 0.7);
}

.post-footer {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid rgba(0, 255, 0, 0.1);
}

.share {
  font-family: monospace;
  margin-bottom: 10px;
}

.share a {
  color: var(--link-color);
  text-decoration: none;
  margin-right: 10px;
  transition: color 0.2s ease;
}

.share a:hover {
  color: #00ff33;
  text-decoration: underline;
}

.navigation {
  font-family: monospace;
  color: rgba(0, 255, 0, 0.7);
}
</style>
{% endblock %} 