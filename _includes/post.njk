{% extends "base.njk" %}

{% block content %}
<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ page.date | dateIso }}">{{ page.date | dateDisplay }}</time>
      {% if tags %}
        <div class="post-tags">
          {% for tag in tags %}
            <a href="/tags/{{ tag | slug }}/" class="tag">#{{ tag }}</a>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <footer class="post-footer">
    <div class="post-share">
      <span>Share this post:</span>
      <a href="https://twitter.com/intent/tweet?text={{ title | urlencode }}&url={{ page.url | url }}" target="_blank" rel="noopener noreferrer">Twitter</a>
      <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ page.url | url }}&title={{ title | urlencode }}" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>
  </footer>
</article>
{% endblock %}

<style>
.post {
  background: rgba(0, 255, 0, 0.05);
  padding: 20px;
  border-radius: 5px;
  margin: 20px 0;
  font-family: 'Courier New', monospace;
  line-height: 1.6;
}

.post-header {
  margin-bottom: 30px;
}

.post-title {
  font-family: monospace;
  color: rgba(0, 255, 0, 0.7);
  margin-bottom: 10px;
}

.post-meta {
  font-family: monospace;
  color: rgba(0, 255, 0, 0.7);
  font-size: 0.9em;
  margin: 10px 0;
}

.post-tags {
  font-family: monospace;
  font-size: 0.9em;
  margin: 10px 0;
}

.post-tags a {
  color: var(--link-color);
  text-decoration: none;
  margin-right: 10px;
  transition: color 0.2s ease;
}

.post-tags a:hover {
  color: #00ff33;
  text-decoration: underline;
}

.post-content {
  margin: 20px 0;
  line-height: 1.6;
  color: var(--text-color);
}

.post-content p {
  margin: 15px 0;
  color: var(--text-color);
}

.post-content a {
  color: var(--link-color);
  text-decoration: none;
  border-bottom: 1px dashed var(--link-color);
  transition: all 0.2s ease;
}

.post-content a:hover {
  color: #00ff33;
  border-bottom: 1px solid #00ff33;
}

.post-content img {
  max-width: 100%;
  height: auto;
  margin: 20px 0;
  border-radius: 5px;
  display: block;
  margin-left: auto;
  margin-right: auto;
  border: 1px solid rgba(0, 255, 0, 0.2);
  box-shadow: 0 0 10px rgba(0, 255, 0, 0.1);
}

.post-content pre {
  background: rgba(0, 0, 0, 0.3);
  padding: 15px;
  border-radius: 5px;
  overflow-x: auto;
}

.post-content code {
  font-family: monospace;
}

.post-content blockquote {
  border-left: 3px solid rgba(0, 255, 0, 0.3);
  margin: 20px 0;
  padding-left: 20px;
  color: rgba(0, 255, 0, 0.7);
}

.post-footer {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid rgba(0, 255, 0, 0.1);
}

.post-share {
  font-family: monospace;
  margin-bottom: 10px;
}

.post-share a {
  color: var(--link-color);
  text-decoration: none;
  margin-right: 10px;
  transition: color 0.2s ease;
}

.post-share a:hover {
  color: #00ff33;
  text-decoration: underline;
}
</style>