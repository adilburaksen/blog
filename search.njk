---
layout: layout.njk
title: Search
---

<div class="terminal-container">
  <div class="terminal-header">
    <span class="prompt">$</span> find / -name "*.md" | grep -i
  </div>
  <div class="search-container">
    <input type="text" id="searchInput" placeholder="Type to search..." class="terminal-input">
  </div>
  <div id="searchResults" class="search-results">
    <!-- Results will be populated here -->
  </div>
</div>

<script>
const posts = [
  {% for post in collections.posts %}
    {
      title: "{{ post.data.title | safe }}",
      url: "{{ post.url | safe }}",
      description: "{{ post.data.description | safe }}",
      content: "{{ post.templateContent | striptags | safe }}",
      date: "{{ post.date | dateDisplay }}"
    }{% if not loop.last %},{% endif %}
  {% endfor %}
];

const searchInput = document.getElementById('searchInput');
const searchResults = document.getElementById('searchResults');

searchInput.addEventListener('input', (e) => {
  const query = e.target.value.toLowerCase();
  if (query.length < 2) {
    searchResults.innerHTML = '';
    return;
  }

  const results = posts.filter(post => 
    post.title.toLowerCase().includes(query) ||
    post.description.toLowerCase().includes(query) ||
    post.content.toLowerCase().includes(query)
  );

  searchResults.innerHTML = results.map(post => `
    <article class="search-result">
      <h3><span class="prompt">$</span> <a href="${post.url}">${post.title}</a></h3>
      <time>${post.date}</time>
      <p>${post.description}</p>
    </article>
  `).join('');
});
</script>

<style>
.terminal-container {
  background: rgba(0, 255, 0, 0.05);
  padding: 20px;
  border-radius: 5px;
  margin-top: 20px;
}

.terminal-header {
  color: var(--text-color);
  margin-bottom: 15px;
  font-family: 'Fira Code', monospace;
}

.terminal-input {
  width: 100%;
  padding: 10px;
  background: var(--bg-color);
  border: 1px solid var(--text-color);
  color: var(--text-color);
  font-family: 'Fira Code', monospace;
  font-size: 16px;
  border-radius: 3px;
}

.terminal-input:focus {
  outline: none;
  border-color: #fff;
  box-shadow: 0 0 5px rgba(0, 255, 0, 0.3);
}

.terminal-input::placeholder {
  color: rgba(0, 255, 0, 0.5);
}

.search-results {
  margin-top: 20px;
}

.search-result {
  border-bottom: 1px solid rgba(0, 255, 0, 0.1);
  padding: 15px 0;
}

.search-result:last-child {
  border-bottom: none;
}

.search-result h3 {
  margin: 0 0 10px 0;
}

.search-result h3 a {
  color: var(--link-color);
  text-decoration: none;
  transition: color 0.2s ease;
}

.search-result h3 a:hover {
  color: #fff;
  text-decoration: underline;
}

.search-result time {
  color: rgba(0, 255, 0, 0.7);
  font-size: 0.9em;
  font-family: 'Fira Code', monospace;
  display: block;
  margin-bottom: 5px;
}

.search-result p {
  color: var(--text-color);
  margin: 5px 0 0 0;
  font-size: 0.95em;
}

.prompt {
  color: var(--text-color);
  margin-right: 5px;
}
</style> 